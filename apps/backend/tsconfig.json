{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "outDir": "./lib",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
